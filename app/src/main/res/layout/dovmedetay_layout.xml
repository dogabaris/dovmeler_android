<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <com.bigapps.doga.dovmeler.SquaredImageView
        android:id="@+id/dovme_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/indir_btn"
        android:text="@string/indir_txt"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:background="@drawable/button"
        android:shadowColor="#12FFF7"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="34dp"
        android:textAllCaps="false"/>



    <Button
        android:id="@+id/paylas_btn"
        android:text="PaylaÅŸ"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="128dp"
        android:layout_height="52dp"
        android:background="@drawable/button"
        android:shadowColor="#12FFF7"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:textAllCaps="false"
        android:layout_alignTop="@+id/indir_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>